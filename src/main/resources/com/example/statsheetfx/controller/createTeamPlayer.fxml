<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.statsheetfx.controller.createTeamPlayerController">
    <Label layoutX="448.0" layoutY="14.0" text="Create Team">
        <font>
            <Font size="34.0" />
        </font>
    </Label>
    <Label layoutX="79.0" layoutY="114.0" prefHeight="25.0" prefWidth="74.0" text="Teamname:" />
    <TextField fx:id="teamName" layoutX="154.0" layoutY="114.0" prefHeight="25.0" prefWidth="141.0" />
    <TableView fx:id="playersTable" editable="true" layoutX="79.0" layoutY="151.0" prefHeight="359.0" prefWidth="883.0">
        <columns>
            <TableColumn prefWidth="236.0" text="Name">
                <cellValueFactory><PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="96.0" text="Number">
                <cellValueFactory><PropertyValueFactory property="jerseyNo" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <TextField fx:id="newFirstName" layoutX="79.0" layoutY="518.0" prefHeight="25.0" prefWidth="220.0" promptText="FirstName" />
    <TextField fx:id="newLastName" layoutX="303.0" layoutY="518.0" prefHeight="25.0" prefWidth="220.0" promptText="LastName" />
    <Button layoutX="662.0" layoutY="518.0" mnemonicParsing="false" onAction="#addPlayerToTable" prefHeight="25.0" prefWidth="131.0" text="Add Player" />
    <Button fx:id="btn_finish" layoutX="831.0" layoutY="561.0" mnemonicParsing="false" onAction="#createNewTeam" prefHeight="25.0" prefWidth="131.0" text="Finish" />
   <TextField fx:id="newNumber" layoutX="543.0" layoutY="518.0" prefHeight="25.0" prefWidth="93.0" promptText="jersey number" />
</AnchorPane>
